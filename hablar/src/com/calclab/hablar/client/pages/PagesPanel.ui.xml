<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.status {
			background-color: #E9E9E9;
			padding-left: 3px;
			color: gray;
		}
	</ui:style>

	<g:DockLayoutPanel unit='PX'>
		<g:center>
			<g:StackLayoutPanel ui:field="stack" unit='PX'>
			</g:StackLayoutPanel>
		</g:center>
		<g:south size='16'>
			<g:Label styleName="{style.status}" ui:field="status">Hablar widget v0.0.1 - emite v0.4.4</g:Label>
		</g:south>
	</g:DockLayoutPanel>


</ui:UiBinder> 