<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.title {
			display: block;
			float: left;
		}
		
		@sprite .icon {
			display: block;
			float: left;
			gwt-image: 'chatBasic';
			width: 19px;
		}
		
		@sprite .close {
			display: block;
			float: right;
			margin: 2px 0 0 0;
			width: 16px;
			height: 16px;
			gwt-image: 'closeIcon';
		}
		
		.stackHeader {
			cursor: pointer;
			/*background-color: #E9E9E9;*/
			background-color: #e9e9e9;
			padding: 3px 5px;
			height: 16px;
			overflow: hidden;
			border-bottom: 1px solid #BBBBBB;
			border-top: 1px solid white;
		}
		
		.active {
			font-weight: bold;
			background-color: orange;
		}
	</ui:style>

	<ui:image field='chatBasic' src='chat-basic.gif' />
	<ui:image field='closeIcon' src='close.png' />


	<g:HTMLPanel>
		<div class='{style.stackHeader}' ui:field="header">
			<span class='{style.icon}' ui:field="icon"></span>
			<g:Label styleName="{style.title} " ui:field="title"></g:Label>
			<g:Label styleName='{style.close}' ui:field="close" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 