<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.chat {
			border: 1px solid #E9E9E9;
		}
		.list {
			width: 100%; overflow: auto;
		}
		.talker {
			background-color: #E9E9E9;
		}
		.talkBox {
			width: 100%; padding: 3px;
			height: 54;
			border: 3px solid #BBBBBB;
		}
	</ui:style>
	<g:DockLayoutPanel unit='PX' styleName="{style.chat}">
		<g:center>
			<g:FlowPanel styleName="{style.list}" ui:field="list"></g:FlowPanel>
		</g:center>
		<g:south size="60">
			<g:HTMLPanel styleName="{style.talker}">
				<g:TextArea styleName="{style.talkBox}" ui:field="talkBox"></g:TextArea>
			</g:HTMLPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 