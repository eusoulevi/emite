<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.item {
			display: block;
			width: 100%;
			overflow: hidden;
			padding: 5px 3px 0 3px;
			border-bottom: 1px solid #E9E9E9;
			height: 20px;
		}
		
		@sprite .icon {
			gwt-image: 'buddy';
			display: block;
			float: left;
			width: 19px;
			height: 16px;
			margin-left: 3px;
		}
		
		.name {
			display: block;
			float: left;
			cursor: pointer;
		}
		
	</ui:style>
	<ui:image field="buddy" src="buddy.gif"></ui:image>
	<g:HTMLPanel styleName="{style.item}">
		<span class="{style.icon}"></span>
		<g:Label styleName="{style.name}" ui:field="name" />
	</g:HTMLPanel>
</ui:UiBinder> 